            <class path="net.xyan.controller.ClientSupportsContentController" obmitConfig="ContentConfiguration,Parameters"/>
            <!-- Controller uses bindconfig to fill the ContentRepository -->
            <class path="net.xyan.controller.ContentAggregationController" obmitConfig="ContentConfiguration,Parameters"/>
            <!-- Controller reacts on missing content and alters the usecase -->
            <class path="net.xyan.controller.ContentUnavailableController" obmitConfig="ContentConfiguration"/>
        </controller>
